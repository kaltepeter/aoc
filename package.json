{
  "main": "src/main.ts",
  "scripts": {
    "start": "tsc",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/main.ts",
    "format:fix": "pretty-quick --staged",
    "precommit": "run-s format:fix lint test",
    "lint": "tslint --project ./tsconfig.json --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "dependencies": {
    "rxjs": "6.6.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/ramda": "^0.27.32",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-preset-angular": "^8.3.2",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ramda": "^0.27.1",
    "rxjs-tslint-rules": "^4.34.7",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.2"
  }
}
