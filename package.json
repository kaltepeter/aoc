{
  "main": "src/main.ts",
  "scripts": {
    "start": "tsc",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/main.ts",
    "format:fix": "pretty-quick --staged",
    "precommit": "run-s format:fix lint test",
    "lint": "tslint --project ./tsconfig.json --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "dependencies": {
    "rxjs": "6.5.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-preset-angular": "^8.0.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rxjs-tslint-rules": "^4.27.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.2"
  }
}
